<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisFavores">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blancoSucio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MiPerfil">

        <Button
            android:id="@+id/PedirFavor"
            android:layout_width="283dp"
            android:layout_height="42dp"
            android:layout_marginTop="36dp"
            android:background="@color/blanco"
            android:fadingEdge="horizontal|vertical"
            android:fontFamily="@font/rubik"
            android:onClick="pedirFavor"
            android:text="@string/PedirFavor"
            android:textColor="@color/azul"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listaFavoresMios" />

        <TextView
            android:id="@+id/parteArriba"
            android:layout_width="413dp"
            android:layout_height="71dp"
            android:background="@color/azul"
            android:textColor="@color/blanco"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/parteAbajo"
            android:layout_width="413dp"
            android:layout_height="71dp"
            android:background="@color/azul"
            android:textColor="@color/blanco"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/Favores"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/azul"
            android:onClick="favores"
            android:text="@string/Favores"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/misFavores"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/azul"
            android:text="@string/MisFavores"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Favores" />

        <TextView
            android:id="@+id/Regalos"
            android:layout_width="58dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/azul"
            android:onClick="regalos"
            android:text="@string/Regalos"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Mensajes" />

        <TextView
            android:id="@+id/ParteAbajo"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/azul"
            android:onClick="configuracion"
            android:text="@string/Configuracion"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Regalos" />

        <TextView
            android:id="@+id/Mensajes"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/azul"
            android:onClick="mensajes"
            android:text="@string/Mensajes"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/misFavores" />

        <TextView
            android:id="@+id/CuadroGrollies"
            android:layout_width="134dp"
            android:layout_height="47dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/blanco"
            android:onClick="comprarGrollies"
            app:layout_constraintBottom_toBottomOf="@+id/parteArriba"
            app:layout_constraintStart_toStartOf="@+id/parteArriba"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Grollies"
            android:layout_width="62dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:onClick="comprarGrollies"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/CuadroGrollies"
            app:layout_constraintTop_toTopOf="@+id/CuadroGrollies"
            tools:text="grollies" />

        <ImageView
            android:id="@+id/comprarGrollies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="8dp"
            android:background="@color/blanco"
            android:onClick="comprarGrollies"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/CuadroGrollies"
            app:srcCompat="@android:drawable/ic_input_add" />

        <ImageView
            android:id="@+id/grollies_logo"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="8dp"
            android:onClick="comprarGrollies"
            app:layout_constraintStart_toStartOf="@+id/CuadroGrollies"
            app:layout_constraintTop_toTopOf="@+id/CuadroGrollies"
            app:srcCompat="@drawable/grollies" />

        <TextView
            android:id="@+id/MisFavores"
            android:layout_width="185dp"
            android:layout_height="41dp"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/azul"
            android:text="@string/MisFavores"
            android:textColor="@color/blanco"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="@+id/parteArriba"
            app:layout_constraintStart_toEndOf="@+id/comprarGrollies"
            app:layout_constraintTop_toTopOf="@+id/parteArriba" />

        <ListView
            android:id="@+id/listaFavoresMios"
            android:layout_width="409dp"
            android:layout_height="451dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parteArriba" >

        </ListView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>