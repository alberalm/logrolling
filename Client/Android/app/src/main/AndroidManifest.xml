<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.logrolling.client">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.FavorToBeDoneActivity" />
        <activity android:name=".view.ChatPersonActivity" />
        <activity android:name=".view.AskedFavorActivity" />
        <activity android:name=".view.DoFavorActivity" />
        <activity android:name=".view.MessageActivity" />
        <activity android:name=".view.SearchActivity" />
        <activity android:name=".view.ShopActivity" />
        <activity android:name=".view.MyProfileActivity" />
        <activity android:name=".view.ConfigurationActivity" />
        <activity android:name=".view.GiftsActivity" />
        <activity android:name=".view.AskFavorActivity" />
        <activity android:name=".view.MyFavorsActivity" />
        <activity android:name=".view.RegistrationActivity" />
        <activity android:name=".view.SignInActivity" />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>