<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    tools:context=".InicioSesion">

    <ImageView
        android:id="@+id/logo_logrolling"
        android:layout_width="179dp"
        android:layout_height="172dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IniciarSesion"
        app:srcCompat="@drawable/logrolling_logo" />

    <TextView
        android:id="@+id/IniciarSesion"
        android:layout_width="206dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:text="@string/IniciarSesion"
        android:textColor="@color/blancoSucio"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/rubik"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/NombreUsuario"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="378dp"
        android:layout_height="72dp"
        android:layout_marginBottom="15dp"
        android:drawableStart="@drawable/ic_person_white_24dp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:ems="10"
        android:fadeScrollbars="false"
        android:hint="@string/NombreUsuario"
        android:inputType="textPersonName"
        android:scrollbarSize="45sp"
        android:scrollbarStyle="insideInset"
        android:singleLine="false"
        android:textColor="@color/blancoSucio"
        android:textColorHint="@color/blancoSucio"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/Contrasenna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Contrasenna"
        android:layout_width="379dp"
        android:layout_height="78dp"
        android:layout_marginBottom="32dp"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="@string/CotraseÃ±a"
        android:inputType="textPassword"
        android:textColor="@color/blancoSucio"
        android:textColorHint="@color/blancoSucio"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/InicioSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/InicioSesion"
        android:layout_width="283dp"
        android:layout_height="42dp"
        android:layout_marginBottom="30dp"
        android:background="@color/blanco"
        android:onClick="iniciarSesion"
        android:text="@string/IniciarSesion"
        android:textColor="@color/azul"
        app:layout_constraintBottom_toTopOf="@+id/Cuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Cuenta"
        android:layout_width="153dp"
        android:layout_height="19dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:layout_marginBottom="65dp"
        android:text="@string/Cuenta"
        android:textColor="@color/blanco"
        app:fontFamily="@font/rubik"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cuenta"
        android:layout_width="75dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="65dp"
        android:onClick="registro"
        android:text="@string/Registrate"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        app:fontFamily="@font/rubik"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Cuenta" />

</androidx.constraintlayout.widget.ConstraintLayout>