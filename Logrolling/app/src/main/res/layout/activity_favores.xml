<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favores">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Regalos">

        <TextView
            android:id="@+id/parteAbajo"
            android:layout_width="413dp"
            android:layout_height="71dp"
            android:background="@color/azul"
            android:textColor="@color/blanco"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/Favores"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/azul"
            android:text="@string/Favores"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/MisFavores"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/azul"
            android:onClick="misFavores"
            android:text="@string/MisFavores"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="@+id/parteAbajo"
            app:layout_constraintStart_toEndOf="@+id/Favores" />

        <TextView
            android:id="@+id/regalos"
            android:layout_width="58dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/azul"
            android:onClick="regalos"
            android:text="@string/Regalos"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mensajes" />

        <TextView
            android:id="@+id/configuracion"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/azul"
            android:onClick="configuracion"
            android:text="@string/Configuracion"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/regalos" />

        <TextView
            android:id="@+id/mensajes"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/azul"
            android:onClick="mensajes"
            android:text="@string/Mensajes"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/MisFavores" />

        <TextView
            android:id="@+id/parteArriba"
            android:layout_width="413dp"
            android:layout_height="71dp"
            android:background="@color/azul"
            android:textColor="@color/blanco"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pedirFavorTit"
            android:layout_width="122dp"
            android:layout_height="41dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            android:layout_marginBottom="15dp"
            android:background="@color/azul"
            android:text="@string/Favores"
            android:textColor="@color/blanco"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="@font/rubik"
            app:layout_constraintBottom_toBottomOf="@+id/parteArriba"
            app:layout_constraintEnd_toEndOf="@+id/parteArriba"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/CuadroGrollies"
            android:layout_width="134dp"
            android:layout_height="47dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:background="@color/blanco"
            android:onClick="comprarGrollies"
            app:layout_constraintBottom_toBottomOf="@+id/parteArriba"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/parteArriba" />

        <ImageView
            android:id="@+id/ComprarGrollies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="8dp"
            android:background="@color/blanco"
            android:contentDescription="ComprarGrollies"
            android:onClick="comprarGrollies"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/CuadroGrollies"
            app:srcCompat="@android:drawable/ic_input_add" />

        <ImageView
            android:id="@+id/Grollieslogo"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="8dp"
            android:contentDescription="IconoGrollies"
            android:onClick="comprarGrollies"
            app:layout_constraintStart_toStartOf="@+id/CuadroGrollies"
            app:layout_constraintTop_toTopOf="@+id/CuadroGrollies"
            app:srcCompat="@drawable/grollies" />

        <TextView
            android:id="@+id/grollies3"
            android:layout_width="62dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:onClick="comprarGrollies"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/CuadroGrollies"
            app:layout_constraintTop_toTopOf="@+id/CuadroGrollies"
            tools:text="grollies" />

        <ListView
            android:id="@+id/ListaRegalos"
            android:layout_width="405dp"
            android:layout_height="569dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parteArriba" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>